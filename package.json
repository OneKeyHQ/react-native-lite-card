{
  "name": "@onekeyfe/app-modules",
  "packageManager": "yarn@4.1.0",
  "private": true,
  "version": "1.0.0",
  "scripts": {
    "version:bump": "yarn workspaces foreach --all  --no-private --topological version --deferred patch",
    "version:apply": "yarn version apply --all",
    "version:commit": "git commit -am 'chore: release ${version}'",
    "version:push": "git push",
    "version:publish": "yarn workspaces foreach --all run release"
  },
  "workspaces": [
    "native-modules/*",
    "native-components/*"
  ],
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/compat": "^1.3.2",
    "@eslint/eslintrc": "^3.3.1",
    "@eslint/js": "^9.35.0",
    "@react-native/babel-preset": "0.83.0",
    "@react-native/eslint-config": "0.83.0",
    "@release-it/conventional-changelog": "^10.0.1",
    "@types/jest": "^29.5.14",
    "@types/react": "^19.2.0",
    "commitlint": "^19.8.1",
    "del-cli": "^6.0.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.7.0",
    "lefthook": "^2.0.3",
    "nitrogen": "^0.29.8",
    "prettier": "^2.8.8",
    "react": "19.2.0",
    "react-native": "0.83.0",
    "react-native-builder-bob": "^0.40.13",
    "react-native-nitro-modules": "^0.29.8",
    "release-it": "^19.0.4",
    "turbo": "^2.5.6",
    "typescript": "^5.9.2"
  },
  "peerDependencies": {
    "react": "*",
    "react-native": "*",
    "react-native-nitro-modules": "^0.29.8"
  }
}
